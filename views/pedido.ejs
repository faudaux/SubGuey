<%- include("head.ejs") %>

<body>
  <%- include("navbar.ejs") %>
  <div class="main-div">
    <h1 class="principal">¿Qué le vas a poner?</h1>


    <div class="cuadro main-div">
      <form  action="/carrito" method="get">
        <button style="float: right;" class="btn btn-success btn-lg" type="submit" name="button">Ir al Carrito <i class="fas fa-shopping-cart"></i></button>

      </form>
      <h2>Ingredientes</h2>
      <hr>
      <form action="/pedido" method="post">


        <% tipos.forEach(function(tipo) { %>
        <h3><%=tipo%></h3>

        <div class="form-check">
          <ul class="list-group">
            <br>
            <%  ingredientes.forEach(function(ingrediente){ %>
            <%  if(ingrediente.type === tipo){ %>
            <%  if (ingrediente.type === "Tortilla" || ingrediente.type === "Carne") { %>
            <li class="list-group-item">
              <label> <%=ingrediente.name%>
              <input class="form-check-input" type="radio" id=aaaa name="<%=ingrediente.type%>input" value="<%=ingrediente.name%>" required>
              </label>
              <p class="price">$<%=ingrediente.price%></p>
            </li>
            <%    } else{ %>
            <li class="list-group-item">

              <label>
                <%=ingrediente.name%>
               <input class="form-check-input" type="checkbox" name="<%=ingrediente.type%>input" value="<%=ingrediente.name%>">
              </label>

              <p class="price">$<%=ingrediente.price%></p>
            </li>
            <%} %>
            <%    } %>
            <%    }); %>
            <br>
          </ul>
        </div>
        <%  }); %>



        <br>
        <button class="btn btn-primary orden" type="submit" name="estaOrden">Añadir al Carrito</button>
      </form>
    </div>



  </div>

  <%- include("footer.ejs") %>
</body>
